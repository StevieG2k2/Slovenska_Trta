@using Microsoft.AspNetCore.Identity
@using web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item velikost2 gumb">
        <a id="manage" class="nav-link gumbTekst velikost2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Pozdravljen/a @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item velikost2 gumb">
        <form id="logoutForm" class="form-inline velikost2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link gumbTekst velikost2">Odjava</button>
        </form>
    </li>
}
else
{
    <li class="nav-item velikost2 gumb">
        <a class="nav-link gumbTekst velikost2" id="register" asp-area="Identity" asp-page="/Account/Register">Registracija</a>
    </li>
    <li class="nav-item velikost2 gumb">
        <a class="nav-link gumbTekst velikost2" id="login" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
    </li>
}
</ul>
